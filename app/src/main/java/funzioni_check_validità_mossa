public bool outOfBounds(int v, int id){
    jsonobject risultato;
	risultato = echo select Posizione FROM Pawn WHERE idpawn=id && idplayer=idCurrentPlayer() && idgame=currentGame() ;//ritorno da pagina php in cui dato l'id della pedina mi ritorna la sua posizione
	int val;
	if(val+v >= 30){
		return false;
	}
	else{
		return true;
	}
}


public bool eatingBiggerPawn(int v, int id){
	int pos = echo select Posizione FROM Pawn WHERE idpawn=id && idplayer=whoPlay() && idgame=currentGame() ;//ritorno da pagina php in cui dato l'id della pedina mi ritorna la sua posizione
	int numero_pedine = echo select count( Posizione ) FROM Pawn WHERE idpawn=id && idplayer=idCurrentPlayer() && idgame=currentGame() ;//ritorno da pagina php in cui dato la posizione della pedina mi ritorna il numero delle pedine con la stessa posizione
	int numero_nemiche = echo select count (Posizione) FROM Pawn WHERE idpawn=id && idplayer=!idCurrentPlayer() && idgame=currentGame();//ritorno da pagina php il numero di pedine avversarie in posizione pos+v
	if (numero_pedine < numero_nemiche){
		return false;
	}
	else{
		return true;
	}
}
	
